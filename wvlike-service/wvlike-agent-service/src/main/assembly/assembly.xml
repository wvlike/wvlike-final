<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>jar-with-dependencies</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- 打包当前项目的 class（已编译） -->
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory> <!-- target/classes -->
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>**/com/wvlike/agent/attach/**</exclude>
<!--                <exclude>**/com/wvlike/agent/first/**</exclude>-->
                <exclude>**/com/wvlike/agent/test/**</exclude>
                <exclude>logs/**</exclude>
                <exclude>**/*.tmp</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <!-- 打包所有依赖的 class（解压进 JAR） -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack> <!-- 关键：解压依赖！ -->
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>